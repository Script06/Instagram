<div class="container-fluid">
  <div class="row text-center">
    <div class="col-lg-3 text-center">
      <h4>Instagram</h4>
    </div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3">
      <div>
        <h4><%= render partial: "layouts/logout_button" %></h4>
        <h4>Hello, <%= current_user.username%></h4>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid" >
  <div class="row text-center">
    <div class="col-lg-2 table-bordered ml-4" id="menu">
      <div class= "mt-4">
        <h4>МЕНЮ</h4>
      </div>
      <div class="button mt-2"><%= button_to "Создать пост", new_post_path, method: :get %></div>
      <div class="button mt-2"><%= button_to "Мои публикации", user_posts_path, method: :get %></div>
      <div></div>
    </div>
    <div class="col-lg-7">
      <!--ТУТ НАЧИНАЕТСЯ ВЫВОД ПОСТА С КАРУСЕЛЯМИ-->
      <% @posts.each do |post| %>
        <% if post.images.attached? %>
          <div id="carouselExampleControls<%= post.id %>" class="carousel slide" data-interval="false" data-ride="carousel" style="background-color: rgba(169, 169, 169, 0.5);">
            <div class="carousel-inner">
              <% post.images.each_with_index do |image, index|  %>
                <% if index == 0 %>
                  <div class="carousel-item active">
                    <%= image_tag image, class: 'd-block w-30' %>
                  </div>
                <% else %>
                  <div class="carousel-item">
                    <%= image_tag image, class: 'd-block w-30' %>
                  </div>
                <% end %>
              <% end %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls<%= post.id %>" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls<%= post.id %>" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <p>текст поста: <%= post.body %> </p>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-2">Lorem ipsum dolor sit amet consectetur adipisicing elit. Rem, illo?</div>
  </div>
</div>