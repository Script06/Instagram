<div class="col-lg-8">
  <div class="container">
    <div class="row justify-content-center align-items-center" style="height: 100vh;">
      <div class="col-lg-4">
        <%= form_with(model: @post, url: user_posts_path, html: { class: "justify-content-center" }) do |form| %>
          <div class="form-group">
            <%= form.label "Выберите фотографии:(не менее одного фото)" %>
            <%= form.file_field :images, multiple: true,  class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label "Добавьте описание (не более 1000 символов)" %>
            <%= form.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.submit controller.action_name = "Поделиться", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
