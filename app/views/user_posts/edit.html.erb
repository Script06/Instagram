<div class="col-lg-8">
  <div class="container">
    <div class="row justify-content-center align-items-center" style="height: 100vh;">
      <div class="col-lg-12">
        <%= form_with(model: @post, url: user_post_path(@post), html: { class: "justify-content-center" }) do |form| %>
          <% @post.images.each do |p| %>
            <h4><%= t('.select_photos') %>: </h4>
            <div class="box_image">
              <div class="box_content">
                <%= image_tag p.variant(resize_to_limit: [400, 400]) %>
                <%= check_box_tag "deleted_img_ids[]", p.id %>
              </div>
            </div>
          <% end %>
          <div class="form-group">
            <%= form.label :body, t('.description_label') %>
            <%= form.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.submit controller.action_name = t('.edit'), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
